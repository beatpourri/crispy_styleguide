{#
/**
 *** Available variables:
 * content-wrapper - "div, span, ..." - default: no wrapper
 * content_class - wrapper class
 * content_element_class_name
 * content_modifier_classes
 * full_page_prefix
 * full_page_suffix
 *
 * Usage:
 *
 * {% include "@molecules/full_content/full_content.twig" %}
 */
#}
{% set content_wrapper = content_wrapper|default('') %}
{% set content_class = content_class|default('') %}
{% set content_element_class_name = content_element_class_name|default('') %}
{% set content_modifier_classes = content_modifier_classes|default('') %}
{% set content_element_class %}
{% if content_element_class_name %}
 {{ content_class }}__{{ content_element_class_name }}
{% endif %}
{% endset %}

{% set content_modifier %}
{% if content_modifier_classes %}
{% for modifieritem in content_modifier_classes %}
 {{ content_class }}--{{ modifieritem }}
{% endfor %}
{% endif %}
{% endset %}

{% set wrapper_classes %}
    {% spaceless %}
        class="{{ content_class }}{{ content_element_class }}{{ content_modifier }}"
    {% endspaceless %}
{% endset %}

{%- set wrapper_start -%}
{%- if content_wrapper and not content_class -%}
<{{ content_attributes|without('class') }}{{ content_wrapper }}>
{% elseif content_class and not content_wrapper %}
<div{{ content_attributes|without('class') }} {{ wrapper_classes }}>
{% elseif content_class and content_wrapper %}
<{{ content_attributes|without('class') }}{{ content_wrapper }} {{ wrapper_classes }}>
{%- endif -%}
{%- endset -%}

    {% set wrapper_end %}
    {% if content_wrapper %}
</{{ content_wrapper }}>
    {% endif %}
{% endset %}

{% spaceless %}
    {{ wrapper_start }}
        {{ full_page_prefix|raw }}
    {% block full_content %}
          {{ full_content }}
    {% endblock %}
        {{ full_page_suffix|raw }}
    {{ wrapper_end }}
{% endspaceless %}
