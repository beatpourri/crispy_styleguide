{#
/**
 * Available variables:
 * - button_content - content of the button
 * - button_base_class - base class name
 * - button_modifiers - modifierclassname
 * - button_element_class - element class name
 * - aria_describedby - f.E.: button-submit, button-like, button-delete, ...
 * - button_id - Id of the button
 * - button_description_text - Button description for screen readers
 * - aria_pressed - default value is "false"
 * - button_type - f.E.: "submit"
 * - button_width_value  - for full width use "full"
 * - button_align - use "center" for centering, use "right" for right alignment
 *
 * Available blocks:
 * - button_content
 * Usage:
 *
 * {% include "@atoms/06-buttons/01-button.twig"
 * with {
 * "button_content": "Button text",
 * "aria_describedby": "button-id",
 * "button_description_text" : "Button description text",
 * }
 * %}
 *
 * {% include "@atoms/06-buttons/01-button.twig"
 *   with {
 *   "button_content": "Button text",
 *   "button_base_class": "button",
 *   "button_element_class": "custom_element_class",
 *   "button_modifiers": ["alt2"],
 *   "aria_pressed": "false",
 *   "aria_describedby": "button-id",
 *   "button_id": "button_state",
 *   "button_description_text" : "An example button",
 *   "button_type": "submit",
 *   "button_width_value": "full",
 *   "button_align": "center",
 *   }
 * %}
 *
 */
#}
{% set button_base_class = button_base_class|default('button') %}
{% set button_element_class = button_element_class|default('') -%}
{% set button_modifiers = button_modifiers|default('') %}
{% set button_align = button_align |default('') %}
{% set button_width_value = button_width_value |default('') %}
{% if button_width_value == 'full' %}
    {% set button_width = button_base_class~'--full' %}
{% endif %}
{% set button_modifier %}
    {% for buttonitem in button_modifiers %}{{ button_base_class }}--{{ buttonitem }} {% endfor %}
{% endset %}
{% set button_classes %}{% if button_base_class %}class="{{ button_base_class|clean_class }}{% if button_element_class %} {{ button_base_class|clean_class }}__{{ button_element_class|clean_class }}{% endif%}{% if button_modifiers %}{{ button_modifier|clean_class }}{% endif %} {{ button_width }}"{% endif %}{% endset %}

{% set aria_describedby = aria_describedby|default('button-example') %}
{% set button_id = button_id|default('button') %}
{% set button_type_value = button_type_value|default('') %}
{% set button_type %}
    {% if button_type_value %}
        type="{{ button_type_value }}"
    {% endif %}
{% endset %}
{% set aria_pressed = aria_pressed|default('false') %}
{% set button_description_text = button_description_text|default('This is a button') %}

{% if button_align == 'center' %}
<div class="align-center">
{% elseif button_align == 'right' %}
 <div class="align-right">
{% endif %}
<button {{ button_classes }} id="{{ button_id }}" aria-pressed="{{ aria_pressed }}" aria-describedby="{{ aria_describedby }}" {{ button_type }} >
 {% block button_content %}
    {{ button_content }}
  {% endblock %}
</button>
<span id="{{ aria_describedby }}" class="sr-only">{{ button_description_text }}</span>

{% if button_align is not empty %}
</div>
{% endif %}