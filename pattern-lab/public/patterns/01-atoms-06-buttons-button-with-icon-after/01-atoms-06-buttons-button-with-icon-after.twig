{#
/**
 * Available variables:
 * - button_content - content of the button
 * - button_base_class - base class name
 * - button_modifiers - modifier classname(s) (["modifier1", "modifier2"])
 * - button_element_class - element class name
 * - aria_describedby - f.E.: "button-submit", "button-like", "button-delete", ...
 * - button_id - Id of the button
 * - button_description_text - Button description for screen readers
 * - icon_name - the filename of the svg
 * - icon_align - display the icon before or after the button content - value can be "before" or "after" - default value is "before"
 * - aria_pressed - default value is "false"
 *
 * Available blocks:
 * - button_content
 * Usage:
 *
 * {% include "@atoms/06-buttons/03-button-with-icon.twig"
 *   with {
 *   "button_content": "Button text",
 *   "button_base_class": "button",
 *   "button_element_class": "elementclass",
 *   "button_modifiers": ["alt2"],
 *   "aria_pressed": "false",
 *   "aria_describedby": "button-example",
 *   "button_id": "button_state",
 *   "icon_name": "svgfilename",
 *   "icon_align": "before",
 *   "button_description_text" : "An example button",
 *   }
 * %}
 * - Icon before
 * {% include "@atoms/06-buttons/03-button-with-icon.twig"
 * with {
 * "button_content": "button with Icon Left",
 * "button_modifiers": ["alt2"],
 * "icon_name": "square",
 * "icon_align": "before",
 * "button_description_text": "Button Description text",
 * }
 * %}
 * - Icon after
 * {% include "@atoms/06-buttons/03-button-with-icon.twig"
 * with {
 * "button_content": "button with Icon Right",
 * "button_modifiers": ["alt2"],
 * "icon_name": "disc",
 * "icon_align": "after",
 * "button_description_text": "Button Description text",
 * }
 * %}
 *
 */
#}
{% embed "@atoms/06-buttons/01-button.twig" %}

    {% block button_content %}
        {% if icon_align == 'before' %}
            {% include "@atoms/10-icon/01-icon.twig"
            with {
            "icon_modifiers": ["before"],
            }
            %}
        {% endif %}

        {{ button_content }}

        {% if icon_align == 'after' %}
            {% include "@atoms/10-icon/01-icon.twig"
            with {
            "icon_modifiers": ["after"],
            }%}
        {% endif %}

    {% endblock %}
{% endembed %}