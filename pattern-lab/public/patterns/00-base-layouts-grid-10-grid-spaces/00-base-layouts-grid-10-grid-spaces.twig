{% embed "@base/layouts/grid/_grid-col-by-col.twig"
with {
"grid_extra_class_name": "grid-spaceAround",
}
%}
    {% block grid_content %}
        {% include "@base/layouts/grid/_grid-col-item.twig"
        with {
        "col_items_class_name": "2",
        "items": ['(.grid-spaceAround)'],
        }
        %}
        {% include "@base/layouts/grid/_grid-col-item.twig"
        with {
        "col_items_class_name": "2",
        "items": ['(.grid-spaceAround)'],

        }
        %}
        {% include "@base/layouts/grid/_grid-col-item.twig"
        with {
        "col_items_class_name": "2",
        "items": ['(.grid-spaceAround)'],
        }
        %}
    {% endblock %}
{% endembed %}

