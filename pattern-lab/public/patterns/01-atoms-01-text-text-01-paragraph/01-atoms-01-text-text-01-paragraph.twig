{#
/**
 * Available variables:
 * - paragraph_base_class - default 'paragraph'
 * - paragraph_element - default 'p'
 * - paragraph_element_class
 * - paragraph_modifiers - modifiers
 * - paragraph_content - the content of the paragraph
 *
 * Available blocks:
 * - paragraph_content
 *
 * Usage:
 * {% include "@atoms/01-text/text/01-paragraph.twig" with {
 * "paragraph_content": excerpt.short,
 * "paragraph_base_class": paragraph_base_class,
 * "paragraph_element_class": paragraph_element_class,
 * "paragraph_modifiers": paragraph_modifiers,
 * } %}
 * ModifierS
 * {% include "@atoms/01-text/text/01-paragraph.twig" with {
 * "paragraph_content": excerpt.short,
 * "paragraph_base_class": paragraph_base_class,
 * "paragraph_element_class": paragraph_element_class,
 * "paragraph_modifiers": ["modifier1", "modifier2"],
 * } %}
 *
 */
#}
{% set contenttyp = contenttyp|default('') %}
{% set viewmode = viewmode|default('') %}

{% set paragraph_base_class = paragraph_base_class|default('paragraph') %}
{% set paragraph_element_class = paragraph_element_class|default('') -%}
{% set paragraph_element = paragraph_element|default('p') -%}
{% set paragraph_modifiers = paragraph_modifiers|default('') %}
{% set paragraph_modifier %}
  {% for paragraphitem in paragraph_modifiers %}{{ paragraph_base_class }}--{{ paragraphitem }} {% endfor %}
{% endset %}
{% set paragraph_classes %}{% if paragraph_base_class %}class="{{ paragraph_base_class|clean_class }}{% if paragraph_element_class %} {{ paragraph_base_class|clean_class }}__{{ paragraph_element_class }}{% endif%}{% if paragraph_modifiers %}{{ paragraph_modifier }}{% endif %}"{% endif %}{% endset %}

<{{ paragraph_element }} {{ paragraph_classes }}>
  {% block paragraph %}
      {{ paragraph_content }}
  {% endblock %}
</{{ paragraph_element }}>

