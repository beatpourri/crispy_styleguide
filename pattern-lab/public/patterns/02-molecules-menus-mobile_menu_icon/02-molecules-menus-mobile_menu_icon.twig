{#
/**
 * @file
 * Theme override for a menu block.
 *
 * Available variables:
 * - mobile_menu_class - default: "mobile-menu"
 * - mobile_menu_breakpoint_classes - default: "large-hidden"
 * - icon_name
 * - icon_txt
 *
 * Usage:
 * {% include "@molecules/menus/mobile_menu_icon.twig" %}
 */
#}
{% set mobile_menu_id = mobile_menu_id|default('mobile-menu') %}
{% set mobile_menu_class = mobile_menu_class|default('mobile-menu') %}
{% set mobile_menu_breakpoint_classes = mobile_menu_breakpoint_classes |default('large-hidden') %}
{% set icon_txt = icon_txt|default('Menu') %}

{% spaceless %}
  <button id="{{ mobile_menu_id }}" class="{{ mobile_menu_class }} {{ mobile_menu_breakpoint_classes }}">{{- icon_txt -}}
      {% include "@atoms/10-icon/01-icon.twig"
      with {
      "icon_name": "mobile_menu",
      }
      %}
  </button>
{% endspaceless %}
