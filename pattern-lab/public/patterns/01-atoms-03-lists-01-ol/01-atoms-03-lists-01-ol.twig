{#
/**
 * Available variables:
 * - ol_base_class - base classname
 * - ol_element_class - element classname
 *
 * - ol_modifiers - modifier class
 * Available block:
 * - list_content
 *
 * Usage:
 *  {% embed "@atoms/03-lists/01-ol.twig" with {
 *     ol_modifiers: "disc",
 *     ol_element_class: li_element_class
 *   }
 *  %}
 *
 */
#}

{% set ol_base_class = ol_base_class|default('list') %}
{% set ol_element_class = ol_element_class|default('') -%}
{% set ol_modifiers = ol_modifiers|default('') %}
{% set ol_modifier %}
  {% for olitem in ol_modifiers %}{{ ol_base_class }}--{{ olitem }} {% endfor %}
{% endset %}
{% set ol_classes %}{% if ol_base_class %}class="{{ ol_base_class|clean_class }} {% if ol_element_class %}{{ ol_base_class|clean_class }}__{{ ol_element_class|clean_class }}{% endif%}{% if ol_modifiers %}{{ ol_modifier|clean_class }}{% endif %}"{% endif %}{% endset %}

<ol {{ ol_classes }}>
  {% block list_content %}
    {% for ol_item in ol_items %}
      {% include "@atoms/03-lists/_list-item.twig" with {
      "li_base_class": li_base_class,
      "li_element_class": li_element_class,
      "li_modifiers": li_modifiers,
      "li_content": ol_item.content,
      } %}
    {% endfor %}
  {% endblock %}
</ol>
