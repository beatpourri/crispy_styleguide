{% spaceless %}
<main role="main" class="main">
    <a id="main-content" tabindex="-1"></a>
    {% if pl_only %} {# Pattern lab #}
     MAIN
    {% else %} {# Drupal #}
        {{ drupal_block('crispy_messages') }}
        {{ drupal_block('crispy_help') }}
        {{ drupal_block('crispy_tools') }}
        {{ drupal_block('crispy_local_tasks') }}
        {{ drupal_block('crispy_local_actions') }}
        {% block main_content %}
            {{ content }}
        {% endblock %}
    {% endif %}
</main>
{% endspaceless %}